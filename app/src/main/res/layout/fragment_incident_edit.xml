<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/edit_incident_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="Incidente"
        app:navigationIcon="@drawable/ic_back"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <Button
        android:id="@+id/show_camera_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_anchorGravity="bottom"
        app:layout_anchor="@id/edit_incident_toolbar"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/edit_incident_toolbar"
        app:layout_constraintStart_toStartOf="@id/edit_incident_toolbar"
        app:layout_constraintEnd_toEndOf="@id/edit_incident_toolbar"
        android:text="Take picture"/>
    <ImageView
        android:id="@+id/incident_image"
        android:layout_width="match_parent"
        android:layout_height="240dp"
        android:contentDescription="Incident captured image"
        app:layout_constraintTop_toBottomOf="@id/show_camera_btn"
        app:layout_constraintStart_toStartOf="@id/show_camera_btn"
        app:layout_constraintEnd_toEndOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>

